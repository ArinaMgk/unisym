// compatible with
// - C++23 excepted<T,E>
// - Rust  Result<T,E>

namespace uni {
	template <class type0, class typeError>
	struct expected {
		type0* pvalue;
		typeError error;
		byte value_value[sizeof(type0)];
		//
		expected(type0 value, typeError error, bool is_expected) {
			pvalue = !is_expected ? nullptr : new (value_value) type0(value);
			if (!is_expected) {
				this->error = error;
			}
		}
		expected(const type0& value) {
			pvalue = new (value_value) type0(value);
		}
		expected(const typeError& err)
			: pvalue(nullptr), error(err) {
		}
		template<class OtherType0>
		expected(const expected<OtherType0, typeError>& other) {
			if (other.pvalue);
			else {
				pvalue = nullptr;
				error = other.error;
			}
		}

		~expected() {
			if (pvalue) {
				pvalue->~type0();
			}
		}
	};

	template<class typeError>
	auto unexpected(typeError error) {
		// return expected<decltype(error){}, typeError> (decltype(error){}, error);
		struct void_type {} _;
		return expected<void_type, typeError>(_, error, false);
	}
}
