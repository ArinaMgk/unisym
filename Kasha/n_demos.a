; stack preset"ds; eax=LBA28Sector; ebx=address" ret"dword[ebx]=read_len"
;  DFLoad()
;---


%imacro Dprog 10
 FILELEN DD FILEEND
 DB 0xDE,0x32
 %9: DW %8; stack len
 DD (%10-%%APIEnto)/8
 DD %1; entry
 %4: DD section.%2.start; code addr/seg
    DD %3; code len
 %7: DD section.%5.start; data addr/seg
    DD %6; data len
 %%APIEnto: 
%endmacro

%imacro DemProg 6; with Enddf
 FILELEN DD FILEEND
 DW 0x32DE
 DW 0
 DD %6; stack len
 DD %1; entry
 DD section.%2.start; code addr/seg
  DD %3; code len
 DD section.%4.start; data addr/seg
  DD %5; data len
 %%APIEnto: 
%endmacro

%imacro Dem2Prog 8; with Enddf
 FILELEN DD FILEEND
 DD 0
 DW 3,0x32DE
  TIMES 5 DD 0
 DD %1; ENTRY
  TIMES 5 DD 0
 DD %4; STAK LEN
  DD 0,0,0
 DD %3; CODE LEN
 DD section.%2.start; CODE ENTO
 DD %6; DATA LEN
 DD section.%5.start; DATA ENTO
 DD %8
 DD section.%7.start; RONL ENTO
  TIMES 8 DD 0
  TIMES 128 DB 0
%endmacro

%imacro Dapi 2
 %1: DD %2
 DW 0
 DW 0
%endmacro

%imacro Enddf 0
 [SECTION ENDOSEG align=16]
 FILEEND:
%endmacro

%imacro DFLoad 0
 PUSHAD
  PUSH EAX
  MOV CL,1
  CALL %%F_DiskReadLBA28
  SUB EBX,512
  MOV EAX,DWORD[DS:EBX]
  ADD EAX,511
  XOR ECX,ECX
  MOV CL,9; pow(2,9)=512
  SHR EAX,CL
  MOV CL,AL
  MOV DWORD[DS:EBX],ECX
  SHL DWORD[DS:EBX],9
  POP EAX
  SUB CL,1
  JZ %%F_ENDO
 INC EAX
 ADD EBX,512
 %%READLOOP:
   CALL %%F_DiskReadLBA28
  INC EAX
  LOOP %%READLOOP
  JMP %%F_ENDO
 %%F_DiskReadLBA28:
 DiskReadLBA28 EAX,1
 RET
 %%F_ENDO:
 POPAD
%endmacro

;void [es] stack int13h2 CodefileLoad16(bx addr, imm numofsec_offset=0, imm start_sector=2); based:USL/DISK/DiskRead;
%imacro CodefileLoad16 1-3 0,2
 PUSHAD
 MOV AL,1; NumofSector
 MOV AH,2H
 %ifnidni BX,%1
  MOV BX,%1
 %endif
 MOV CH,0
 MOV CL,%3
 MOV DH,0
 MOV DL,80H; Master Drive
 INT 13H
 MOV AL,[ES:BX+%2]
 SUB AL,1
 JBE %%endo
 INC CL;
 PUSH AX
 MOV AX,ES
 ADD AX,0x20; 512 Byte
 MOV ES,AX
 POP AX
 MOV AH,2H
 INT 13H
 %%endo:
 POPAD
 ; ??? 8086 accept popad ???
 ; ??? track limit ???
 ; This will be adapted to LBA and CHS in the future --ArinaRFQ04
%endmacro
