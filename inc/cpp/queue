#if !defined(_INC_Queue_X)
#define _INC_Queue_X

#include "unisym"
#include "trait/XstreamTrait.hpp"

//{TODO} make a pointer to front and distance from the rear

namespace uni {
	// empty:         q==nullptr (not readable)
	//  full: p==q && q!=nullptr (not writable)
	// only for basic types
	template <typename type0> class Queue {
	public:
		stduint limit;
		type0* offss;
	protected:
		bool allocated;
		type0* _Comment(W) p, * _Comment(R) q = 0;
	public:
		Queue(stdint limit) : limit(limit) {
			offss = new type0[limit];
			allocated = true;
			p = offss;
		}
		Queue(type0* offss, stduint limit) : limit(limit), offss(offss), allocated(false) {
			p = offss;
		}
		//
		~Queue();
		//
		bool Enqueue(const type0& item);
		bool Dequeue(type0& item);
		stduint Count();// how many data in the queue
		bool isEmpty() { return q == nullptr; }
		bool isFull() { return q && p == q; }
	};
	template <typename type0>
	Queue<type0>::~Queue() {
		if (allocated) delete[] offss;
		offss = nullptr;
		limit = 0;
	}
	template <typename type0>
	bool Queue<type0>::Enqueue(const type0& item) {
		if (isFull()) return false;
		if (q == nullptr) q = p;
		*p++ = item;
		if (p >= offss + limit) p = offss;
		return true;
	}
	template <typename type0>
	bool Queue<type0>::Dequeue(type0& item) {
		if (isEmpty()) return false;
		item = *q++;
		if (q >= offss + limit) q = offss;
		if (p == q) q = nullptr;// , p = offss;
		return true;
	}
	template <typename type0>
	stduint Queue<type0>::Count() {
		return !q ? nil : p > q ? p - q : limit - (q - p);
		// p - q <=> (_IMM(p) - _IMM(q)) / sizeof(type0)
	}

	class QueueLimited
		: public IstreamTrait, public OstreamTrait
	{
	public:
		Slice slice;
		char* _Comment(W) p = 0; char* _Comment(R) q = 0;
		QueueLimited(Slice _slice) : slice(_slice) {
			p = (char*)slice.address;
		}
		virtual int inn() override {
			if (is_empty()) return -1;
			int ret = (unsigned)*q++;
			if (q >= (char*)slice.address + slice.length) q = (char*)slice.address;
			if (p == q) q = nullptr, p = (char*)slice.address;
			return ret & 0xFF;
		}
		virtual int out(const char* str, stduint len) override// put_inn
		{
			int cnt = 0;
			for0(i, len) {
				if (is_full()) {
					break;
				}
				if (q == nullptr) q = p;
				*p++ = str[i];
				if (p >= (char*)slice.address + slice.length) p = (char*)slice.address;
				cnt++;
			}
			return cnt;
		}
		void clear() { p = (char*)slice.address; q = 0; }
		//
		inline bool is_full() const { return q && p == q; }
		inline bool is_empty() const { return q == nullptr; }
		inline stduint get_number_innable() const { return !q ? nil : p > q ? p - q : slice.length - (q - p); }
	};
}


#endif // !defined(_INC_Queue_X)
