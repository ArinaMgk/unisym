; Some codes were removed.

%imacro File 0
	; Arinae first design. This will behave error in multi-section file!
	%push File
	%$ento: DB (%$endo-%$ento+511)/512
%endmacro

%imacro Endf 0
	%$endo:
	%pop
%endmacro

%imacro DefineStack16 0-2 0,0x7C00
	CLI
	MOV AX,%1
	MOV SS,AX
	MOV SP,%2
	STI
%endmacro
