 ; SETUP LDT DATA SEGM
	MOV EAX,[ESI+84]
	ADD EAX,ESI
	MOV EBX,[ESI+80]
	DEC EBX
	MOV ECX,0x0040F200; [Byt][32][KiSys][DATA][R3][读写/读执]
	CALL %%F_GDTDptrStruct
	MOV EBX,ESI
	CALL %%F_LDTDptrAppend
	OR CX,3; SET RING3
	MOV WORD[ESI+84],CX; DS
 ; SETUP LDT RONL SEGM
