;
; stack preset"ds, ebx:dest" ret[ebx += sectors*512] [CPU ?]
;  DiskReadLBA28(eax logi, cl sectors=1);
;---

%imacro HdiskLoadLBA28 1-2 1
	PUSH EAX
	PUSH ECX
	PUSH EDX
	AND ECX,0x0000_00FF
	%ifnidni CL,%2
		MOV CL,%2
	%endif
	OR CL,CL
	JZ %%ENDO
	MOV EAX,%1
	PUSH ECX
	PUSH EAX
	%%ReadUnit:
		PUSH EAX
		MOV DX,0X1F2
		MOV AL,1; numof sector to read
		OUT DX,AL
		INC DX; 0x1F3
		POP EAX; LBA 7~0
		OUT DX,AL
		INC DX
		MOV CL,8
		SHR EAX,CL; LBA 15~8
		OUT DX,AL
		INC DX
		SHR EAX,CL; LBA 23~16
		OUT DX,AL
		INC DX
		SHR EAX,CL
		OR AL,0XE0 ; MAINDISK+LBA27~24 [1#1$]+[0000] ;#=0 zo CHS else LBA mode,$=1 zo slavedisk
		OUT DX,AL
		INC DX
		MOV AL,0X20 ; 0x20 read signal
		OUT DX,AL
		%%waitload:
		IN AL,DX
		AND AL,0X88 ; 10001000 first 1 [BUSY], last 1 [READY]
		CMP AL,0X08
		JNZ %%waitload
		MOV ECX,256; *=512/2
		MOV DX,0X1F0 ; 0x1F0 data port
		%%load:
		IN AX,DX
		MOV [DS:EBX],AX
		ADD EBX,2
		LOOP %%load
	POP EAX
	INC EAX
	POP ECX
	LOOP %%ReadUnit
	%%ENDO:
	POP EDX
	POP ECX
	POP EAX
%endmacro

