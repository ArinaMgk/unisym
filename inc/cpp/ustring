#ifndef _INCX_STRING
#define _INCX_STRING

#include "cinc"// C Begin
	#include "../c/ustring.h"
#include "cinc"// C End

class String {
private:
	size_t counts;
	char* addr;
public:
	String(const char* str);
	~String();
	size_t length();
	const char* reflect();
};

typedef class String ustring;

#endif // !_INCX_STRING
